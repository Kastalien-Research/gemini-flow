{
  "$schema": "https://mcpjam.dev/schemas/eval-config.json",
  "name": "Gemini Flow MCP Conformance Tests",
  "version": "1.0.0",
  "server": {
    "command": "node",
    "args": ["dist/mcp/index.js"],
    "env": {
      "NODE_ENV": "test"
    }
  },
  "suites": {
    "tools": {
      "enabled": true,
      "tests": [
        "tools/list",
        "tools/call",
        "tools/schema-validation",
        "tools/error-handling",
        "tools/multi-part-response"
      ]
    },
    "prompts": {
      "enabled": true,
      "tests": [
        "prompts/list",
        "prompts/get",
        "prompts/arguments",
        "prompts/templates"
      ]
    },
    "resources": {
      "enabled": true,
      "tests": [
        "resources/list",
        "resources/read",
        "resources/templates",
        "resources/subscriptions"
      ]
    },
    "transports": {
      "enabled": true,
      "tests": [
        "stdio/connection",
        "stdio/lifecycle",
        "http/connection",
        "http/streaming"
      ]
    }
  },
  "benchmarks": {
    "enabled": true,
    "metrics": ["latency", "throughput", "memory"],
    "iterations": 100
  },
  "coverage": {
    "minimum": 80,
    "targets": {
      "tools": 100,
      "prompts": 90,
      "resources": 90,
      "transports": 95
    }
  }
}
